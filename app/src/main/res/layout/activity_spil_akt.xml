<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcus.galgeleg.Spil_akt">

    <TextView
        android:id="@+id/synligtOrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="det synlige ord"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="109dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ordet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galgeordet"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/synligtOrd"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/synligtOrd" />



        <EditText
            android:id="@+id/gaetBogstav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:text="Gæt et bogstav"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/gaetKnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gæt"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="286dp" />
</android.support.constraint.ConstraintLayout>
